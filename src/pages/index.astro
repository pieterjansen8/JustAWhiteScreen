---
<style>
	div{
		background-color: #f0f0f0;
		display: flex;
		justify-content: center;
		align-items: center;
		width: 100vw;
		height: 100vh;
	}
</style>
<Layout>
	<div>
		<button id="btn">request fullscreen</button>
	</div>
</Layout>

<script>
	let clicked = false;
	const btn = document.getElementById("btn");
	btn.addEventListener("click", () => {
		if(clicked==false){
			document.body.requestFullscreen();
			clicked = true;
			btn.innerHTML = "exit";
		}
		else{
			document.exitFullscreen();
			clicked = false;
			btn.innerHTML = "request";
		}
		
	});
</script>